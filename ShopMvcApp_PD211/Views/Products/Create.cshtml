@model Product
<h1>Create Product Form</h1>

<form class="row g-3" method="post" asp-action="Create">
    <div class="col-md-6">
        <label asp-for=Title class ="form-label">Title</label>
        <input asp-for=Title type="text" class="form-control" placeholder="Enter product title">
    </div>
    <div class="col-md-6">
        <label asp-for=CategoryId class="form-label">Category Id</label>
        <input asp-for=CategoryId type="number" class="form-control" placeholder="Enter product category id">
    </div>

    <div class="col-md-5">
        <label asp-for=Price class="form-label">Price</label>
        <input asp-for=Price type="number" min="0" step="0.01" class="form-control" placeholder="Enter product price">
    </div>
    <div class="col-md-4">
        <label asp-for=Discount class="form-label">Discount</label>
        <input asp-for=Discount type="number" min="0" max="100" class="form-control" placeholder="Enter product discount">
    </div>
    <div class="col-md-3">
        <label asp-for=Quantity class="form-label">Quantity</label>
        <input asp-for=Quantity type="number" min="0" class="form-control" placeholder="Enter product quantity">
    </div>

    <div class="col-12 mb-3">
        <label asp-for=Description class="form-label">Description</label>
        <textarea asp-for=Description class="form-control" rows="3" placeholder="Enter product description"></textarea>
    </div>
   
