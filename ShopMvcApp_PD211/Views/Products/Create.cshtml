        <select id="inputState" class="form-select">
            <option selected>Choose...</option>
            <option>...</option>
        </select>
    </div> *@

    <div class="col-md-6">
        <button type="button" class="btn btn-dark w-100">Back</button>
    </div>
    <div class="col-md-6">
        <button type="submit" class="btn btn-success w-100">Create</button>
    </div>
</form>