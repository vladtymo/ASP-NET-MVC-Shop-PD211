@model List<ProductDto>;

<div class="card text-center">
    <div class="card-header">
        My Cart
    </div>
    <div class="card-body">
        <h5 class="card-title">Product List</h5>

        <ol class="list-group list-group-numbered">
            @foreach (var i in Model)
            {
                <li class="list-group-item d-flex justify-content-between align-items-start">

                    <div class="ms-2 me-auto text-start">

                        <img height="40" src="@i.ImageUrl" alt="@i.Title" />
                        <div class="fw-bold">@i.Title</div>
                        Category: @i.CategoryName | Stock: @i.Quantity
                    </div>
                    <span class="badge text-bg-primary rounded-pill">@i.Price$</span>
                </li>
            }
        </ol>

        <a href="#" class="btn btn-success mt-3">Confirm</a>
    </div>
    <div class="card-footer text-body-secondary">
        Total: 000$
    </div>
</div>